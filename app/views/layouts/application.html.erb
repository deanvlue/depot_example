<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Bookstore On line </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>

<div id="banner">
  <%= image_tag("logo-png")  %>
  <%= @page_title || "Pragmatic Bookshelf"  %>
</div> <!-- banner -->
<div id="columns">
  <div id="side">
    <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">FAQ</a></li>
        <li><a href="#">News</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </div><!-- side -->
    
    <div id="main">
      <%= yield %>
    </div><!-- main -->
</div><!-- columns -->

</body>
</html>
